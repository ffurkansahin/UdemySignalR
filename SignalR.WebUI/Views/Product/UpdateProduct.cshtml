@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Product</div>
						</div>
						<input type="hidden" asp-for="ID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Product Name</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
							<div class="form-group">
								<label for="Name">Product Price</label>
								<input type="text" class="form-control" asp-for="Price" id="Price">
							</div>
							<div class="form-group">
								<label for="Name">Product Image URL</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
							<div class="form-group">
								<label for="Name">Product Category</label>
								@Html.DropDownListFor(i => i.CategoryID, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="Name">Product Description</label>
								<input type="text" class="form-control" asp-for="Description" id="Description">
							</div>
							<input type="hidden" asp-for="Status" />
						</div>
						<div class="card-action">
							<button class="btn btn-info">Update</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


