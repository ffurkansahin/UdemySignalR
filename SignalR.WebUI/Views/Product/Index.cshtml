@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Management</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform product process below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Name</th>
									<th scope="col">Price</th>
									<th scope="col">Category</th>
									<th scope="col">Status</th>
									<th scope="col">Update</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ID</td>
										<td>@item.Name</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a href="/Product/UpdateProduct/@item.ID" class="btn btn-outline-info">Update</a></td>
										<td><a href="/Product/DeleteProduct/@item.ID" class="btn btn-outline-danger">Delete</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-primary">Create New Product</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

